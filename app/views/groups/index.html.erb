            <section class="sample-text-area">
              <div class="container">
                <h3 class="text-heading"><%= group.title %></h3>
                <p class="sample-text">
                  <%= group.body %>
									<% if signed_in? %>
									 <%= link_to 'Editar', edit_group_path(group) %>
