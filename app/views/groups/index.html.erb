                </p>
              

            <div class="section-top-border">
                  <div class="row gallery-item">
                      <% group.attachments.each do |attachment| %>
                      <div class="col-md-4">
                        <%= link_to(image_tag(attachment.url, class: 'img-pop-up single-gallery-image', alt: 'Image'), attachment.url, target: '_blank') %>
                      </div>
                      <% end %>
											<div class="col-md-4">
	                      <a href="" class="img-pop-up"><div class="single-gallery-image">
													<iframe  src="<%= group.youtube %>" frameborder="0"  allowfullscreen autoplay></iframe>

												</div></a>
	                    </div>

                  </div>
                </div>
						</div>
						</section>
